<Policy xmlns="urn:oasis:names:tc:xacml:2.0:policy:schema:os"
        RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:permit-overrides"
        Version="2.0" PolicyId="wcsPolicy">
    <Target>
        <Resources>
             <Resource>
                 <ResourceMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:anyURI-equal">
                      <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#anyURI">http://test.geomatys.fr/wms</AttributeValue>
                      <ResourceAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#anyURI" AttributeId="urn:oasis:names:tc:xacml:1.0:resource:resource-id"/>
                 </ResourceMatch>
             </Resource>
        </Resources>
    </Target>
    <Rule Effect="Permit" RuleId="PublicLayerRule">
        <Target>
             <Actions>
                 <Action>
                      <ActionMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                          <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">layer3</AttributeValue>
                          <ActionAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"/>
                      </ActionMatch>
                 </Action>
                 <Action>
                      <ActionMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                          <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">layer4</AttributeValue>
                          <ActionAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"/>
                      </ActionMatch>
                 </Action>
             </Actions>
        </Target>
        <Condition>
             <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
               <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">anonymous</AttributeValue>
               <SubjectAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" AttributeId="urn:oasis:names:tc:xacml:2.0:subject:role" />
             </Apply>
      </Condition>
    </Rule>
    <Rule Effect="Permit" RuleId="HiddenLayerRule">
        <Target>
             <Actions>
                 <Action>
                      <ActionMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                          <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">layer1</AttributeValue>
                          <ActionAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"/>
                      </ActionMatch>
                 </Action>
                 <Action>
                      <ActionMatch MatchId="urn:oasis:names:tc:xacml:1.0:function:string-equal">
                          <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">layer2</AttributeValue>
                          <ActionAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" AttributeId="urn:oasis:names:tc:xacml:1.0:action:action-id"/>
                      </ActionMatch>
                 </Action>
             </Actions>
        </Target>
        <Condition>
             <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:string-is-in">
               <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#string">admin</AttributeValue>
               <SubjectAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#string" AttributeId="urn:oasis:names:tc:xacml:2.0:subject:role" />
             </Apply>
      </Condition>
    </Rule>
    <!-- If none of the rules apply, deny the request -->
    <Rule Effect="Deny" RuleId="DenyRule"/>
</Policy>