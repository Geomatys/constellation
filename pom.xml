  <!--
    Répertoires où trouver les dépendances. Un répertoire http://*.maven.org/
    est implicite. On y trouve à la fois les dépendances nécessaires à Maven
    lui-même ansi que des dépendances courantes telles que le pilote JDBC de
    PostgreSQL. Le répertoire "Geotools" contient les fichiers JAR de Geotools
    ainsi que quelques dépendances nécessaires à Geotools mais non publiées
    sur le répertoire de Maven, par exemple la bibliothèque de l'UCAR pour
    les lectures de fichiers NetCDF.
  -->
  <repositories>
    <repository>
      <id>geotools</id>
      <name>Geotools et ses dépendances spécifiques</name>
      <url>http://maven.geotools.fr/repository/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>geotools</id>
      <name>Geotools et ses dépendances spécifiques</name>
      <url>http://maven.geotools.fr/repository/</url>
    </pluginRepository>
  </pluginRepositories>



  <!--
    Configuration du compilateur et de l'archiveur.    Pour chaque fichier JAR, une
    entrée "class-path" sera ajoutée dans  "META-INF/MANIFEST.MF"  avec la liste de
    toutes les dépendances utilisées. En outre, les dépendances seront copiées dans
    le répertoire "target/binaries" par commodité (cette tâche est effectuée par un
    plugin propre à Geotools). La combinaison de ces deux fonctionnalités permet de
    lancer une application facilement en spécifiant simplement le JAR final, sans
    avoir à spécifier toutes les dépendances dans le "classpath".

    En principe, il n'est pas nécessaire de déclarer de numéro de version pour les
    plugins de Maven. Dans la pratique, ces déclarations aident à garder un "build"
    stable et cohérent sur différentes machines. On peut facilement vérifier si de
    nouvelles mise à jour sont disponibles en naviguant dans la page suivante:

    http://maven.apache.org/plugins/index.html
  -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.5</source>        <!-- The -source argument for the Java compiler.   -->
          <target>1.5</target>        <!-- The -target argument for the Java compiler.   -->
          <encoding>UTF-8</encoding>  <!-- The -encoding argument for the Java compiler. -->
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.1</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.3</version> <!-- Version minimale supportant JUnit 4 -->
      </plugin>
      <plugin>
        <groupId>org.geotools.maven</groupId>
        <artifactId>gt2-jar-collector</artifactId>
        <version>${geotools.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>collect</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>



  <!--
    Génération de la javadoc et du site web.

    En principe, il n'est pas nécessaire de déclarer de numéro de version pour les
    plugins de Maven. Dans la pratique, ces déclarations aident à garder un "build"
    stable et cohérent sur différentes machines. On peut facilement vérifier si de
    nouvelles mise à jour sont disponibles en naviguant dans la page suivante:

    http://maven.apache.org/plugins/index.html
  -->
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.2</version>
        <configuration>
          <source>1.5</source>            <!-- Necessary to enable javadoc to handle J2SE 1.5 features.           -->
          <author>true</author>           <!-- Specifies whether or not the author text is included.              -->
          <version>false</version>        <!-- Includes the version text in the generated docs.                   -->
          <linksource>true</linksource>   <!-- Creates an HTML version of each source file (with line numbers).   -->
          <noqualifier>all</noqualifier>  <!-- Omits qualifying package name from ahead of class names in output. -->
          <quiet>true</quiet>             <!-- Shuts off non-error and non-warning messages.                      -->
          <maxmemory>384M</maxmemory>     <!-- The maximum Java heap size to be used when launching the javadoc.  -->
          <encoding>UTF-8</encoding>      <!-- Specifies the encoding name of the source files.                   -->
          <charset>UTF-8</charset>        <!-- Specifies the HTML character set for this document.                -->
          <locale>fr</locale>            <!-- The locale that javadoc uses when generating documentation.        -->
          <additionalparam>-keywords</additionalparam>
          <!-- Creates links to existing javadoc-generated documentation of external referenced classes. -->
          <links>
            <link>http://java.sun.com/javase/6/docs/api/</link>
            <link>http://java.sun.com/products/java-media/jai/forDevelopers/jai-apidocs</link>
            <link>http://java.sun.com/products/java-media/3D/forDevelopers/j3dapi</link>
            <link>http://geoapi.sourceforge.net/pending/javadoc</link>
            <link>http://javadoc.geotools.fr/snapshot</link>
            <link>http://jsr-108.sourceforge.net/javadoc</link>
          </links>
          <excludePackageNames>net.sicade.resources</excludePackageNames>
          <!-- Separates packages on the overview page into whatever groups is specified. -->
          <groups>
            <group>
              <title>Interfaces graphiques</title>
              <packages>net.sicade.gui*</packages>
            </group>
            <group>
              <title>Calculs numériques</title>
              <packages>net.sicade.numeric*</packages>
            </group>
            <group>
              <title>Observations</title>
              <packages>net.sicade.observation*</packages>
            </group>
          </groups>
          <!-- Enables the Javadoc tool to interpret a simple, one-argument custom block tag tagname in
               doc comments. Note: <placement/> should be a combinaison of the letters Xaoptcmf. -->
          <tags>
            <tag><name>todo</name><placement>tfmc</placement><head>TODO:</head></tag>
          </tags>
        </configuration>
      </plugin>

      <!-- Génération des rapports pour le site web. -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>2.0-beta-5</version>
        <configuration>
          <locales>fr</locales>
          <inputEncoding>UTF-8</inputEncoding>
          <outputEncoding>UTF-8</outputEncoding>
        </configuration>
      </plugin>

      <!-- Publication de la section "info". -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>2.0.1</version>
      </plugin>

      <!-- Publication de la liste des changements récents. -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-changelog-plugin</artifactId>
        <version>2.0</version>
        <configuration>
          <type>range</type>
          <range>30</range>
        </configuration>
      </plugin>

      <!-- Publication des résultats des tests unitaires. -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-report-plugin</artifactId>
        <version>2.3</version>
      </plugin>

      <!-- Publication du code source. -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jxr-plugin</artifactId>
        <version>2.1</version>
      </plugin>

      <!-- Publication d'une liste de "todo" trouvés dans le code source. -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>taglist-maven-plugin</artifactId>
        <version>2.0</version>
      </plugin>
    </plugins>
  </reporting>



