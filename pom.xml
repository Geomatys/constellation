  <!--
    Compilation et création du fichier JAR.
  -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>             <!-- The -source argument for the Java compiler.                           -->
          <target>1.5</target>             <!-- The -target argument for the Java compiler.                           -->
          <debug>true</debug>              <!-- Whether to include debugging information in the compiled class files. -->
          <encoding>ISO-8859-1</encoding>  <!-- The -encoding argument for the Java compiler.                         -->
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>



  <!--
    Génération de la javadoc et du site web.
  -->
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.0</version>
        <configuration>
          <source>1.5</source>            <!-- Necessary to enable javadoc to handle J2SE 1.5 features.           -->
          <author>true</author>           <!-- Specifies whether or not the author text is included.              -->
          <version>false</version>        <!-- Includes the version text in the generated docs.                   -->
          <linksource>true</linksource>   <!-- Creates an HTML version of each source file (with line numbers).   -->
          <noqualifier>all</noqualifier>  <!-- Omits qualifying package name from ahead of class names in output. -->
          <quiet>true</quiet>             <!-- Shuts off non-error and non-warning messages.                      -->
          <maxmemory>384M</maxmemory>     <!-- The maximum Java heap size to be used when launching the javadoc.  -->
          <encoding>ISO-8859-1</encoding> <!-- The encoding name of the source files.                             -->
          <locale>fr</locale>             <!-- The locale that javadoc uses when generating documentation.        -->
          <overview>                      <!-- The text for the overview documentation.                           -->
            ${project.build.sourceDirectory}/overview.html
          </overview>
          <additionalparam>-keywords</additionalparam>
          <excludePackageNames>net.sicade.resources</excludePackageNames>
          <!-- Separates packages on the overview page into whatever groups is specified. -->
          <groups>
            <group>
              <title>Interfaces graphiques</title>
              <packages>net.sicade.gui*</packages>
            </group>
            <group>
              <title>Calculs numériques</title>
              <packages>net.sicade.numeric*</packages>
            </group>
            <group>
              <title>Observations</title>
              <packages>net.sicade.observation*</packages>
            </group>
          </groups>
          <!-- Creates links to existing javadoc-generated documentation of external referenced classes. -->
          <links>
            <link>http://java.sun.com/j2se/1.5/docs/api</link>
            <link>http://java.sun.com/products/java-media/jai/forDevelopers/jai-apidocs</link>
            <link>http://java.sun.com/products/java-media/3D/forDevelopers/j3dapi</link>
            <link>http://geoapi.sourceforge.net/snapshot/javadoc</link>
            <link>http://javadoc.geotools.fr/snapshot</link>
            <link>http://jsr-108.sourceforge.net/javadoc</link>
          </links>
          <!-- Enables the Javadoc tool to interpret a simple, one-argument custom block tag tagname in
               doc comments. Note: <placement/> should be a combinaison of the letters Xaoptcmf. -->
          <tags>
            <tag><name>todo</name><placement>tfmc</placement><head>TODO:</head></tag>
          </tags>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <configuration>
          <locales>fr</locales>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>surefire-report-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jxr-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>taglist-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>



  <!--
    Serveurs vers lesquels déployer la documentation.
