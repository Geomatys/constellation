    </repository>
    <repository>
      <id>geotools</id>
      <name>Geotools - Geographic toolkit</name>
      <url>http://maven.geotools.fr/repository</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
