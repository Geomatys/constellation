  <!--
    Répertoires où trouver les dépendances. Un répertoire http://*.maven.org/
    est implicite. On y trouve à la fois les dépendances nécessaires à Maven
    lui-même ansi que des dépendances courantes telles que le pilote JDBC de
    PostgreSQL. Le répertoire "Geotools" contient les fichiers JAR de Geotools
    ainsi que quelques dépendances nécessaires à Geotools mais non publiées
    sur le répertoire de Maven, par exemple la bibliothèque de l'UCAR pour
    les lectures de fichiers NetCDF.
  -->
  <repositories>
    <repository>
      <id>java.net.1</id>
      <name>java.net community</name>
      <url>http://download.java.net/maven/1</url>
      <layout>legacy</layout>
    </repository>
    <repository>
      <id>java.net.2</id>
      <name>java.net community</name>
      <url>http://download.java.net/maven/2</url>
    </repository>
    <repository>
      <id>maven object web</id>
      <name>maven Object web</name>
      <url>http://maven.objectweb.org/maven2</url>
    </repository>
    <repository>
      <id>geotools</id>
      <name>Geotools et ses dépendances spécifiques</name>
