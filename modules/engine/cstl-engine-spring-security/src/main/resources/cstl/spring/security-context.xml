<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
			http://www.springframework.org/schema/security 
			http://www.springframework.org/schema/security/spring-security-3.2.xsd">


    <beans:alias name="springSecurityFilterChain" alias="securityFilter"/>

	<http  request-matcher="ant">
		<intercept-url pattern="/WS/configuration/**" access="ROLE_cstl-admin" />
		<intercept-url pattern="/WS/*/admin/**" access="ROLE_cstl-admin" />
		<intercept-url pattern="/api/**" access="ROLE_cstl-admin" />


		<http-basic />

	</http>

	<authentication-manager>
		<authentication-provider >
			<user-service>
				<user name="admin" password="admin" authorities="ROLE_USER, ROLE_cstl-admin" />
				<user name="bob" password="bob" authorities="ROLE_cstl-user" />
			</user-service>
		</authentication-provider>
	</authentication-manager>
</beans:beans>