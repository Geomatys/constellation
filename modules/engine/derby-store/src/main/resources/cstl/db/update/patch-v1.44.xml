<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="version_1.44" author="ltisseyre">

        <!--add local column on cstl_user-->
        <addColumn schemaName="admin" tableName="cstl_user">
            <column name="locale" type="TEXT" />
        </addColumn>

        <!--set default locale 'en' for all account-->
        <update tableName="cstl_user" schemaName="admin">
            <column name="locale" value="en" />
        </update>

        <!--Add not null constaint on locale-->
        <addNotNullConstraint tableName="cstl_user" schemaName="admin" columnName="locale" />
    </changeSet>
</databaseChangeLog>