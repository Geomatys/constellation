<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="version_1.42" author="qboileau">

        <!-- Update address column data type -->
        <dropColumn schemaName="admin" tableName="cstl_user" columnName="address"/>
        <addColumn schemaName="admin" tableName="cstl_user">
            <column name="address" type="TEXT" />
        </addColumn>

        <dropColumn schemaName="admin" tableName="cstl_user" columnName="additional_address"/>
        <addColumn schemaName="admin" tableName="cstl_user">
            <column name="additional_address" type="TEXT" />
        </addColumn>

        <!-- Add civility and title column on  [cstl_user] -->
        <addColumn schemaName="admin" tableName="cstl_user">
            <column name="civility" type="VARCHAR(64)" />
        </addColumn>
        <addColumn schemaName="admin" tableName="cstl_user">
            <column name="title" type="TEXT" />
        </addColumn>

    </changeSet>
</databaseChangeLog>