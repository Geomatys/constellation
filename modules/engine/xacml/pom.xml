-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.constellation</groupId>
    <artifactId>engine</artifactId>
    <version>0.9.1</version>
  </parent>



  <!--
    Module description.
  -->
  <groupId>org.constellation.engine</groupId>
  <artifactId>cstl-engine-xacml</artifactId>
  <packaging>jar</packaging>
  <name>Constellation XACML Engine</name>
  <description>
    The sunxacml.sf.net library as improved by JBoss, reviewed and redesigned
    for Constellation.
  </description>



  <!--
    Developers and contributors.
  -->
  <developers>
    <developer>
      <id>cedricbr</id>
      <name>Briançon Cédric</name>
      <email>cedric.briancon@geomatys.fr</email>
      <organization>Geomatys</organization>
      <organizationUrl>http://www.geomatys.fr/</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
    <developer>
      <id>glegal</id>
      <name>Guilhem Legal</name>
      <email>guilhem.legal@geomatys.fr</email>
      <organization>Geomatys</organization>
      <organizationUrl>http://www.geomatys.fr/</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
  </developers>

  <repositories>
    <repository>
      <id>jboss</id>
      <name>jboss xacml</name>
      <url>http://repository.jboss.com/maven2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

  <!--
    Required dependencies for building. These dependencies wil be included into
    the JARs list that Maven will put into the directory "target/binaries".
  -->
  <dependencies>
    <dependency>
     <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-xml-xacml</artifactId>
    </dependency>
    <dependency>
      <groupId>sun-xacml</groupId>
      <artifactId>sun-xacml</artifactId>
      <version>2.0</version>
    </dependency>
  </dependencies>

</project>
