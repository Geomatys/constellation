<?xml version="1.0" encoding="UTF-8"?>
<!--
  Configuration of the "server" engine module from Constellation project.
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.constellation</groupId>
    <artifactId>engine</artifactId>
    <version>0.8-SNAPSHOT</version>
  </parent>



  <!--  Module description.  -->
  <groupId>org.constellation.engine</groupId>
  <artifactId>cstl-engine-scheduler</artifactId>
  <packaging>jar</packaging>
  <name>Constellation Scheduler Engine</name>
  <description>
    Provide the ability to configure tasks.
  </description>



  <!--  Developers and contributors.  -->
  <developers>
    <developer>
      <id>jsorel</id>
      <name>Johann Sorel</name>
      <email>johann.sorel@geomatys.fr</email>
      <organization>Geomatys</organization>
      <organizationUrl>http://www.geomatys.fr/</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
  </developers>

  <!--
    Required dependencies for building. These dependencies wil be included into
    the JARs list that Maven will put into the directory "target/binaries".
  -->
  <dependencies>
    <dependency>
      <groupId>org.constellation.library</groupId>
      <artifactId>cstl-lib-base</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-jaxp-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-processing-quartz</artifactId>
    </dependency>
    <dependency>
      <groupId>net.java.dev.stax-utils</groupId>
      <artifactId>stax-utils</artifactId>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit.project</groupId>
      <artifactId>geotk-test</artifactId>
    </dependency>

  </dependencies>

</project>
