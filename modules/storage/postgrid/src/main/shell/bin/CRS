#!/bin/sh

# ---------------------------------------------------------------------------
# Prints Coordinate Reference System (CRS) objects in "Well Known Text" (WKT)
# format. The CRS objects are designed by a "authority:code" tuple.
# ---------------------------------------------------------------------------


# Initialization common to all scripts
BASE_DIR=`dirname $0`/..
export BASE_DIR
. $BASE_DIR/etc/setenv.sh

# Runs Java commands
export CLASSPATH=.
export CLASSPATH=$CLASSPATH:$JARS/gt-epsg-hsql-$GEOTOOLS_VERSION.jar
export CLASSPATH=$CLASSPATH:$JARS/gt-epsg-extension-$GEOTOOLS_VERSION.jar

java $OPTS org.geotools.referencing.CRS "$@"
