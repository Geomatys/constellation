<?xml version="1.0" encoding="UTF-8"?>

<!--
  Configuration for the "postgrid" module from Constellation project.
  Version: $Id$
-->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.constellation</groupId>
    <artifactId>storage</artifactId>
    <version>0.4-SNAPSHOT</version>
  </parent>



  <!--
    Module description.
  -->
  <groupId>org.constellation.storage</groupId>
  <artifactId>cstl-store-postgrid</artifactId>
  <packaging>jar</packaging>
  <name>Storage using the PostGrid database</name>
  <description>
    A PostgreSQL database schema and Java toolkit for 4-dimensional rasters.
  </description>



  <!--
    Developers and contributors.
  -->
  <developers>
    <developer>
      <id>desruisseaux</id>
      <name>Martin Desruisseaux</name>
      <email>desruisseaux@users.sourceforge.net</email>
      <organization>Geomatys</organization>
      <organizationUrl>http://www.geomatys.fr/</organizationUrl>
      <roles>
        <role>Administrator</role>
        <role>Developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>Antoine Hnawia</name>
      <email>antoine.hnawia@noumea.ird.nc</email>
      <organization>IRD Unité S140</organization>
      <organizationUrl>http://www.espace.ird.nc</organizationUrl>
      <roles>
        <role>Développeur Java</role>
      </roles>
      <timezone>+11</timezone>
    </contributor>
    <contributor>
      <name>Touraivane</name>
      <email>touraivane@univ-nc.nc</email>
      <organization>Université de la Nouvelle-Calédonie</organization>
      <organizationUrl>http://www.univ-nc.nc</organizationUrl>
      <roles>
        <role>Développeur Java</role>
      </roles>
      <timezone>+11</timezone>
    </contributor>
    <contributor>
      <name>Briançon Cédric</name>
      <email>cedric.briancon@geomatys.fr</email>
      <organization>Geomatys</organization>
      <organizationUrl>http://www.geomatys.fr/</organizationUrl>
      <roles>
        <role>Développeur Java</role>
      </roles>
      <timezone>+1</timezone>
    </contributor>
  </contributors>


  <!--
    Required dependencies for building. These dependencies wil be included into
    the JARs list that Maven will put into the directory "target/binaries".
  -->
  <dependencies>
    <dependency>
      <groupId>org.constellation.library</groupId>
      <artifactId>cstl-lib-postgrid</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.opengis</groupId>
      <artifactId>geoapi-pending</artifactId>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-coverageio-pending</artifactId>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-coverageio-netcdf</artifactId>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-go2</artifactId>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit</groupId>
      <artifactId>geotk-widgets-swing</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jdom</groupId>
      <artifactId>jdom</artifactId>
    </dependency>


    <!--
      Repositories where to find dependencies. A directory http://*.maven.org/
      is implicit. One can find the necessary dependencies for Maven itself, and
      some usual dependencies as the JDBC driver for PostgreSQL. The directory
      "Geotools" contains JARs of Geotools as well as some needed dependencies
      for Geotools but not published on the Maven repository, for example the
      UCAR library for the reading of NetCDF files.
    -->
    <dependency>
      <groupId>postgresql</groupId>
      <artifactId>postgresql</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.postgis</groupId>
      <artifactId>postgis-driver</artifactId>
      <scope>runtime</scope>
    </dependency>
    
    
    <!-- For TESTING -->
    <dependency>
      <groupId>org.constellation.library</groupId>
      <artifactId>cstl-lib-postgrid</artifactId>
      <version>${project.version}</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    
  </dependencies>



  <!--
    Compiles and creates the JAR files.
  -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <useSystemClassLoader>true</useSystemClassLoader>
          <includes>
            <include>**/*Suite.java</include>
          </includes>
          <skipTests>true</skipTests>
         </configuration>
      </plugin>
    </plugins>
  </build>
</project>
