<?xml version="1.0" encoding="UTF-8"?>
<!--
  Configuration of "provider" module from Constellation project.
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.constellation</groupId>
        <artifactId>storage</artifactId>
        <version>1.0.1-SNAPSHOT</version>
    </parent>


    <!--
      Module description.
    -->
    <groupId>org.constellation.storage</groupId>
    <artifactId>cstl-store-data-coveragestore</artifactId>
    <packaging>jar</packaging>
    <name>Provider for data : Coverage Store</name>
    <description>
        These packages provide access to Coverage Store datas.
    </description>


    <!--
      Developers and contributors.
    -->
    <developers>
        <developer>
            <id>jsorel</id>
            <name>Johann Sorel</name>
            <email>johann.sorel@geomatys.fr</email>
            <organization>Geomatys</organization>
            <organizationUrl>http://www.geomatys.fr/</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>

    <!--
      Required dependencies for building. These dependencies wil be included into
      the JARs list that Maven will put into the directory "target/binaries".
    -->
    <dependencies>
        <!-- CONSTELLATION -->
        <dependency>
            <groupId>org.constellation.storage</groupId>
            <artifactId>cstl-store-provider</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.constellation.xml-bindings</groupId>
            <artifactId>cstl-xml-configuration</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Geomatys external project -->
        <dependency>
            <groupId>org.geotoolkit</groupId>
            <artifactId>geotk-coverage-store</artifactId>
        </dependency>
        <dependency>
            <groupId>org.geotoolkit</groupId>
            <artifactId>geotk-observation-store</artifactId>
        </dependency>
        <dependency>
            <groupId>org.geotoolkit</groupId>
            <artifactId>geotk-client-osmtms</artifactId>
        </dependency>
        <dependency>
            <groupId>org.geotoolkit</groupId>
            <artifactId>geotk-client-googlemaps</artifactId>
        </dependency>
        <dependency>
            <groupId>org.geotoolkit</groupId>
            <artifactId>geotk-client-wms</artifactId>
        </dependency>
        <dependency>
            <groupId>org.geotoolkit</groupId>
            <artifactId>geotk-client-wmts</artifactId>
        </dependency>

        <!-- External dependencies -->
        <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <scope>compile</scope>
        </dependency>

    </dependencies>

</project>
