<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <context-param>
        <param-name>juzu.run_mode</param-name>
        <param-value>prod</param-value>
    </context-param>
    <context-param>
        <param-name>juzu.inject</param-name>
        <param-value>spring</param-value>
    </context-param>
    <context-param>
        <param-name>juzu.request_encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>

    <servlet>
        <servlet-name>AssetServlet</servlet-name>
        <servlet-class>juzu.impl.asset.AssetServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AssetServlet</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetMap Servlet</servlet-name>
        <servlet-class>org.constellation.gui.servlet.GetMapServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetMap Servlet</servlet-name>
        <url-pattern>/overview/*</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
</web-app>