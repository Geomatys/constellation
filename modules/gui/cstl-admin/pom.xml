<?xml version="1.0" encoding="UTF-8"?>
<!--
  Configuration for the "gui/constellation" module from Constellation project.
  Version: $Id$
--><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.constellation</groupId>
        <artifactId>gui</artifactId>
        <version>0.8-SNAPSHOT</version>
    </parent>



    <!--
    Module description.
  -->
    <groupId>org.constellation.gui</groupId>
    <artifactId>cstl-admin</artifactId>
    <packaging>war</packaging>
    <name>Constellation (admin)</name>
    <description>The GUI for Constellation.</description>


    <!--
    Developers and contributors.
  -->
    <developers>
        <developer>
            <id>glegal</id>
            <name>Guilhem Legal</name>
            <email>guilhem.legal@geomatys.fr</email>
            <organization>Geomatys</organization>
            <organizationUrl>http://www.geomatys.fr/</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
        <developer>
            <id>jsorel</id>
            <name>Johann Sorel</name>
            <email>johann.sorel@geomatys.com</email>
            <organization>Geomatys</organization>
            <organizationUrl>http://www.geomatys.fr/</organizationUrl>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>


    <!--
    Dependencies required only for compilation. These dependencies will be
    included in the JARs' list for which Maven will move into "target/binaries".
  -->
    <dependencies>

        <!-- administration pages -->
        <dependency>
            <groupId>org.constellation.gui</groupId>
            <artifactId>admin-base</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <!-- services administration -->
        <dependency>
            <groupId>org.constellation.gui</groupId>
            <artifactId>admin-page-services</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.constellation.gui</groupId>
            <artifactId>admin-page-csw</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.constellation.gui</groupId>
            <artifactId>admin-page-sos</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.constellation.gui</groupId>
            <artifactId>admin-page-wps</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <!-- providers administration -->
        <dependency>
            <groupId>org.constellation.gui</groupId>
            <artifactId>admin-page-providers</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.constellation.gui</groupId>
            <artifactId>admin-page-sld</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <!-- other admin interfaces -->
        <dependency>
            <groupId>org.constellation.gui</groupId>
            <artifactId>admin-page-tool</artifactId>
            <version>${project.version}</version>
        </dependency>


        <!-- Required only when creating the embedded EPSG database -->
        <dependency>
            <groupId>org.geotoolkit</groupId>
            <artifactId>geotk-epsg-javadb</artifactId>
        </dependency>

        <!-- JSP, Servlet, portlet, Facelet-->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
	    <groupId>javax.servlet.jsp</groupId>
            <artifactId>jsp-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>jstl</groupId>
            <artifactId>jstl</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.facelets</groupId>
            <artifactId>jsf-facelets</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.faces</groupId>
            <artifactId>jsf-api</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.faces</groupId>
            <artifactId>jsf-impl</artifactId>
        </dependency>
        <dependency>
            <groupId>org.richfaces.ui</groupId>
            <artifactId>richfaces-ui</artifactId>
            <version>3.3.3.Final</version>
        </dependency>
        <dependency>
            <groupId>org.richfaces.framework</groupId>
            <artifactId>richfaces-impl</artifactId>
            <version>3.3.3.Final</version>
        </dependency>
        
    </dependencies>

    <properties>
        <netbeans.hint.deploy.server>gfv3ee6</netbeans.hint.deploy.server>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <warName>constellation-adminjsf</warName>
                    <webResources>
                        <resource>
                            <filtering>true</filtering>
                            <directory>${basedir}/src/main/webapp</directory>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>






