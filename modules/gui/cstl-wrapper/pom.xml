    <!--
    Dependencies required only for compilation. These dependencies will be
    included in the JARs' list for which Maven will move into "target/binaries".
  -->
    <dependencies>
        <dependency>
            <groupId>org.constellation.gui</groupId>
            <artifactId>cstl-admin</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.constellation.gui</groupId>
            <artifactId>cstl-services</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>        
    </dependencies>

    <properties>
        <netbeans.hint.deploy.server>gfv3ee6</netbeans.hint.deploy.server>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <warName>constellation-adminjsf</warName>
                    <webResources>
                        <resource>
                            <filtering>true</filtering>
                            <directory>${basedir}/src/main/webapp</directory>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>






