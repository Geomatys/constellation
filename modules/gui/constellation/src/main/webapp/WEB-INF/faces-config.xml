<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
   
  <managed-bean>
      <managed-bean-name>servicesBean</managed-bean-name>
      <managed-bean-class>org.constellation.bean.ServicesBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
   <managed-bean>
      <managed-bean-name>authentificationBean</managed-bean-name>
      <managed-bean-class>org.constellation.bean.AuthentificationBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
    <managed-bean>
      <managed-bean-name>configurationBean</managed-bean-name>
      <managed-bean-class>org.constellation.bean.CSWConfigurationBean</managed-bean-class>
      <managed-bean-scope>session</managed-bean-scope>
   </managed-bean>
   <navigation-rule>
    <!-- Indique pour quelle vue courante la rÃ¨gle s'applique -->
    <from-view-id>/*</from-view-id>
    <navigation-case>
      <from-outcome>fillForm</from-outcome>
      <to-view-id>/formular.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>goBack</from-outcome>
      <to-view-id>/metadata.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>authentified</from-outcome>
      <to-view-id>/metadata.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>notAllowed</from-outcome>
      <to-view-id>/index.html</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>configureCSW</from-outcome>
      <to-view-id>/cswConfig.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
</faces-config>
