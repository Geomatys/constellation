      <organization>Geomatys</organization>
      <organizationUrl>http://www.geomatys.fr/</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
  </developers>


  <!--
    By default, build all webservices. Several profiles are defined
    to specifically build a webservice.
  -->
  <profiles>
    <profile>
      <id>all</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.constellation.web-services</groupId>
          <artifactId>cstl-web-sos</artifactId>
          <version>${project.version}</version>
        </dependency>
        <dependency>
          <groupId>org.constellation.web-services</groupId>
          <artifactId>cstl-web-csw</artifactId>
          <version>${project.version}</version>
        </dependency>
        <dependency>
          <groupId>org.constellation.web-services</groupId>
          <artifactId>cstl-web-wms</artifactId>
          <version>${project.version}</version>
        </dependency>
        <dependency>
          <groupId>org.constellation.web-services</groupId>
          <artifactId>cstl-web-wcs</artifactId>
          <version>${project.version}</version>
        </dependency>
        <dependency>
          <groupId>org.constellation.web-services</groupId>
          <artifactId>cstl-web-configuration</artifactId>
          <version>${project.version}</version>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>wms</id>
      <dependencies>
        <dependency>
          <groupId>org.constellation.web-services</groupId>
          <artifactId>cstl-web-wms</artifactId>
          <version>${project.version}</version>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>wcs</id>
      <dependencies>
        <dependency>
          <groupId>org.constellation.web-services</groupId>
          <artifactId>cstl-web-wcs</artifactId>
          <version>${project.version}</version>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>sos</id>
      <dependencies>
        <dependency>
          <groupId>org.constellation.web-services</groupId>
          <artifactId>cstl-web-sos</artifactId>
          <version>${project.version}</version>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>csw</id>
      <dependencies>
        <dependency>
          <groupId>org.constellation.web-services</groupId>
          <artifactId>cstl-web-csw</artifactId>
          <version>${project.version}</version>
        </dependency>
        <dependency>
          <groupId>org.constellation.web-services</groupId>
          <artifactId>cstl-web-configuration</artifactId>
          <version>${project.version}</version>
        </dependency>
      </dependencies>
    </profile>
  </profiles>


  <!--
    Dependencies required only for compilation. These dependencies will be
    included in the JARs' list for which Maven will move into "target/binaries".
  -->
  <dependencies>
    <dependency>
      <groupId>org.constellation.web-services</groupId>
      <artifactId>cstl-web-ogc</artifactId>
      <version>${project.version}</version>
    </dependency>
    <!-- The 4 xml bindings are added here, because the JSF interface uses
         those bindings to marshall capabilities.
    -->
    <dependency>
      <groupId>org.constellation.xml-bindings</groupId>
      <artifactId>cstl-xml-wms</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.constellation.xml-bindings</groupId>
      <artifactId>cstl-xml-wcs</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.constellation.xml-bindings</groupId>
      <artifactId>cstl-xml-sos</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.constellation.xml-bindings</groupId>
      <artifactId>cstl-xml-csw</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>javax.faces</groupId>
      <artifactId>jsf-api</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet.jsp.jstl</groupId>
      <artifactId>jstl</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet.jsp</groupId>
      <artifactId>jsp-api</artifactId>
      <scope>provided</scope>   <!-- Uncomment if Tomcat already has jsp / servlet APIs in <TOMCAT_HOME>/lib -->
    </dependency>
    <dependency>
      <groupId>javax.faces</groupId>
      <artifactId>jsf-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.myfaces.tomahawk</groupId>
      <artifactId>tomahawk</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.myfaces.tomahawk</groupId>
      <artifactId>tomahawk-sandbox</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <!--scope>provided</scope-->   <!-- Uncomment if Tomcat already has jsp / servlet APIs in <TOMCAT_HOME>/lib -->
    </dependency>
    <dependency>
      <groupId>poi</groupId>
      <artifactId>poi</artifactId>
    </dependency>
  </dependencies>
  <properties>
        <netbeans.hint.deploy.server>J2EE</netbeans.hint.deploy.server>
    </properties>    
</project>
