<div id="left" data-edition="symbol-line" style="display:none;padding:45px 20px 0 35px;">
    <div class="title-row">
        <span class="medium-title">&{edition.style.label.line}:</span>
    </div>
    <div class="form-row">
        <label for="stroke.color" class="pull-left">&{edition.style.label.color}:</label>
        <input type="text" id="stroke.color" name="stroke.color" class="small" />
        <div class="color-overview"></div>
    </div>
    <div class="form-row">
        <label for="stroke.width" class="pull-left">&{edition.style.label.width}:</label>
        <input type="text" id="stroke.width" name="stroke.width" placeholder="&{edition.style.placeholder.number}" />
    </div>
    <div class="form-row">
        <label for="stroke.opacity" class="pull-left">&{edition.style.label.opacity}:</label>
        <input type="text" id="stroke.opacity" name="stroke.opacity" />
    </div>
    <div class="form-row">
        <label class="pull-left">&{edition.style.label.style}:</label>
        <div class="btn-group" data-toggle="buttons-radio">
            <button name="stroke.continuous" type="button" class="btn">&{edition.style.label.continuous}</button>
            <button name="stroke.dashed" type="button" class="btn" data-value="dashed">&{edition.style.label.dashed}</button>
        </div>
    </div>
</div>
