<?xml version="1.0" encoding="UTF-8"?>
<!--
  Configuration of "ogc-services" module from Constellation project.
-->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.constellation</groupId>
    <artifactId>web-services</artifactId>
    <version>0.9-SNAPSHOT</version>
  </parent>



  <!--
    Module description.
  -->
  <groupId>org.constellation.web-services</groupId>
  <artifactId>cstl-web-map</artifactId>
  <packaging>jar</packaging>
  <name>Web service base for Map web services</name>
  <description>
    The geospatial web services standardized by the Open Geospatial Consortium
    (OGC), including WMS, WFS, WMTS and WCS.
  </description>



  <!--
    Developers and contributors.
  -->
  <developers>
    <developer>
      <id>glegal</id>
      <name>Guilhem Legal</name>
      <email>guilhem.legal@geomatys.fr</email>
      <organization>Geomatys</organization>
      <organizationUrl>http://www.geomatys.fr/</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
    <developer>
      <id>qboileau</id>
      <name>Quentin Boileau</name>
      <email>quentin.boileau@geomatys.com</email>
      <organization>Geomatys</organization>
      <organizationUrl>http://www.geomatys.fr/</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>+1</timezone>
    </developer>
  </developers>


  <!--
    Required dependencies for building. These dependencies wil be included into
    the JARs list that Maven will put into the directory "target/binaries".
  -->
  <dependencies>
    <!-- Constellation modules -->
    <dependency>
      <groupId>org.constellation.web-services</groupId>
      <artifactId>cstl-web-ogc</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.constellation.library</groupId>
      <artifactId>cstl-lib-api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.constellation.engine</groupId>
      <artifactId>cstl-engine-server</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.constellation.engine</groupId>
      <artifactId>cstl-engine-scheduler</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.constellation.engine</groupId>
      <artifactId>cstl-engine-process-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <!-- Geotoolkit pending -->
    <dependency>
      <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-xml-sld</artifactId>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-svg</artifactId>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-clients-core</artifactId>
    </dependency>

    <!-- Tests dependencies -->
    <dependency>
       <groupId>org.constellation.engine</groupId>
       <artifactId>cstl-engine-process-core</artifactId>
       <version>${project.version}</version>
       <type>test-jar</type>
       <scope>test</scope>
    </dependency>
     <dependency>
      <groupId>org.constellation.storage</groupId>
      <artifactId>cstl-store-data-datastore</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
     <dependency>
      <groupId>org.constellation.storage</groupId>
      <artifactId>cstl-store-style-sld</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
       <groupId>org.constellation.web-services</groupId>
       <artifactId>cstl-web-ogc</artifactId>
       <version>${project.version}</version>
       <type>test-jar</type>
       <scope>test</scope>
    </dependency>

  </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
