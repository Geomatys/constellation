<project name="fix-jnlp" default="replace">

  <target name="replace">

    <replace dir=".">
      <include name="dist/jnlp/**/*.jnlp"/>
      <replacefilter token="&lt;j2se version=&quot;1.4+&quot;/&gt;"
                     value="&lt;j2se version=&quot;1.5+&quot; max-heap-size=&quot;512M&quot;/&gt;"/>
      <replacefilter token="file:P:\Sicade\commun\netbeans\dist\jnlp\local"
                     value="http://syrhen.espace.ird.nc/explorer/jnlp"/>
    </replace>

  </target>

</project>
