	<!-- general WMS parameters -->
	<!-- AntiAliasing, values are : "true" or "false" -->
        <Parameter name="antialiasing">true</Parameter>

        <!-- Interpolation is used when rendering images, values are : "nearest neighbour", "bilinear" or "bicubic" -->
        <Parameter name="interpolation">nearest neighbour</Parameter>

        <!-- Global Java2D rendering quality, values are : "quality", "speed" or "default" -->
        <Parameter name="rendering">speed</Parameter>

        <!-- Generalization of geometries, values are : "true" or "false" -->
        <Parameter name="generalize">true</Parameter>

        <!-- Generalization factor for geometries, values are : any numeric value -->
        <Parameter name="generalize-factor">1.3</Parameter>

        <!-- Set the rendering order,order by symbolizer is longer but gives nicer results for vector datas, values are : "feature" or "symbolizer" -->
        <Parameter name="rendering-order">feature</Parameter>

        <!-- MultiThreaded : experimental, may consume more memory but may provide much better performance for several layers at the same time, values are : "true" or "false" -->
        <Parameter name="multithread">false</Parameter>

	<!-- Parallal Buffer : experimental, values are : "true" or "false"(default) -->
        <Parameter name="parallal-buffer">false</Parameter>

        <!-- Direct coverage writer : experimental, when possible allow the portrayal service to directly write coverages in the response stream, values are : "true" or "false"(default) -->
        <Parameter name="coverage-writer">true</Parameter>

        <!-- Set the Native Java Advanced Imaging readers that are allowed to be used. Default : none -->
        <Parameter name="jai-native-reader"></Parameter>

        <!-- Set the Native Java Advanced Imaging writers that are allowed to be used. Default : png and jpeg allowed -->
        <Parameter name="jai-native-writer">image/png,image/jpeg</Parameter>

	<!-- Compression level based on the mime type, value must be like : "mime-type:compression" . 
             Compression is between 0 and 1, 0 is for high compression and 1 for no compression. Each pair separated by a , -->
        <Parameter name="compression">image/png:1,image/jpeg:0.6</Parameter>


